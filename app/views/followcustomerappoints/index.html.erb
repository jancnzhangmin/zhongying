<%= render 'layerbegin' %>

<script>
  $(document).ready(function(){
     $('#followcustomerappointspan').text('<%= @customers.count %>');
  });
</script>

<div class="page-content">
  <div class="page-header">
    <h1>
      待跟进客户
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">公司</th>
                <th class="text-center">联系人</th>
                <th class="text-center">联系方式</th>
                <th class="text-center">地址</th>
                <th class="text-center">预约时间</th>
                <th class="text-center" width="150px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @customers.each do |customer| %>
                  <tr>
                    <td>
                      <%= customer.commpany %>
                    </td>
                    <td>
                      <%= customer.contact %>
                    </td>
                    <td>
                      <%= customer.contactphone %>
                    </td>
                    <td>
                      <%= customer.province %><%= customer.city %><%= customer.district %><%= customer.address %>
                    </td>
                    <td>
                      <% appoint = customer.customerappoints %>
                      <% if appoint.count > 0 %>
                      <%= appoint.last.appointtime.strftime('%Y-%m-%d') %>
                      <% end %>
                    </td>

                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-primary" href=<%= customer_path(customer) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          查看
                        </a>
                      </div>
                    </td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>








