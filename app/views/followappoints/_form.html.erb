<div class="row">
  <div class="col-xs-12">
    <!-- PAGE CONTENT BEGINS -->

    <div class="row">
      <div class="col-xs-12">
        <div class="table-responsive">
          <table id="sample-table-1" class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th class="text-center">公司</th>
              <th class="text-center">联系人</th>
              <th class="text-center">联系方式</th>
              <th class="text-center">地址</th>
              <th class="text-center">预约时间</th>
              <th class="text-center" width="150px">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @intentions.each do |intention| %>
                <tr>
                  <td>
                    <%= intention.commpany %>
                  </td>
                  <td>
                    <%= intention.contact %>
                  </td>
                  <td>
                    <%= intention.contactphone %>
                  </td>
                  <td>
                    <%= intention.province %><%= intention.city %><%= intention.district %><%= intention.address %>
                  </td>
                  <td>
                    <% appoint = intention.appoints %>
                    <% if appoint.count > 0 %>
                        <%= appoint.last.appointtime.strftime('%Y-%m-%d') %>
                    <% end %>
                  </td>

                  <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                      <a class="btn btn-xs btn-primary" href=<%= intention_path(intention) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        查看
                      </a>
                    </div>
                  </td>

                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>







