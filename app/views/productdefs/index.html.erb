<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      产品定义
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">产品名称</th>
                <th class="text-center">型号</th>
                <th class="text-center">单位</th>
                <th class="text-center">单价</th>
                <th class="text-center">服务有效期（天）</th>
                <th class="text-center" width="150px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @productdefs.each do |productdef| %>
                  <tr>
                    <td>
                      <%= productdef.name %>
                    </td>
                    <td>
                      <%= productdef.model %>
                    </td>
                    <td>
                      <%= productdef.unit %>
                    </td>
                    <td>
                      <%= productdef.price %>
                    </td>
                    <td>
                      <%= productdef.overdue %>
                    </td>

                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-primary" href=<%= edit_productdef_path(productdef) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          编辑
                        </a>
                        <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-danger" href=<%= productdef_path(productdef) %>>
                          <i class="fa fa-trash bigger-120"></i>
                          删除
                        </a>
                      </div>
                    </td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="clearfix form-actions">
        <div class="col-md-12 text-right" data-turbolinks="false">
          <a class="btn btn-info" href=<%= new_productdef_path %>>
            <i class="fa fa-plus bigger-110"></i>
            新增
          </a>
        </div>
      </div>






<%= render 'layerend' %>