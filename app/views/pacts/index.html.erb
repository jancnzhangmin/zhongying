<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      <%= @customer.commpany %> <%= @customer.contact %>--合同
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">合同名称</th>
                <th class="text-center">合同编号</th>
                <th class="text-center">签订日期</th>
                <th class="text-center">服务开始日期</th>
                <th class="text-center">服务结束日期</th>
                <th class="text-center">合同金额</th>
                <th class="text-center" width="150px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @pacts.each do |pact| %>
                  <tr>
                    <td>
                      <%= pact.name %>
                    </td>
                    <td>
                      <%= pact.pactnumber %>
                    </td>
                    <td>
                      <% if pact.signtime %>
                      <%= pact.signtime.strftime('%Y-%m-%d') %>
                        <% end %>
                    </td>
                    <td>
                      <% if pact.begintime %>
                      <%= pact.begintime.strftime('%Y-%m-%d') %>
                        <% end %>
                    </td>
                    <td>
                      <% if pact.endtime %>
                      <%= pact.endtime.strftime('%Y-%m-%d') %>
                        <% end %>
                    </td>
                    <td>
                      <%= pact.amount %>
                    </td>
                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-primary" href=<%= edit_customer_pact_path(@customer,pact) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          编辑
                        </a>
                        <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-danger" href=<%= customer_pact_url(@customer,pact) %>>
                          <i class="fa fa-trash bigger-120"></i>
                          删除
                        </a>
                      </div>
                    </td>

                  </tr>
              <% end %>
              </tbody>
              </table>
            </div>
          </div>
        </div>

      <div class="clearfix form-actions">
        <div class="col-md-12 text-right" data-turbolinks="false">
          <a class="btn btn-info" href=<%= new_customer_pact_path(@customer) %>>
            <i class="fa fa-plus bigger-110"></i>
            新增
          </a>
        </div>
      </div>






<%= render 'layerend' %>